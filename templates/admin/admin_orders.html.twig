{% extends 'admin/admin_base_layout.html.twig' %}
{% block title %}Orders{% endblock title %}

{% block admin_content %}
    <header class="mb-4">
        <h1>Orders</h1>
    </header>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Date</th>
            <th>Status</th>
            <th>Total</th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>
                    <a href="{{ path('admin_show_order', { 'id': order.id }) }}">{{ order.id }}</a>
                </td>
                <td>
                    {{ order.dateCreated|date('d/m/Y Ã  H\\hi') }}
                </td>
                <td>
                    <div class="badge badge-primary p-2">
                        {{ order.status }}
                    </div>
                </td>
                <td>
                    {{ order.transaction.total }} &#36;
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}